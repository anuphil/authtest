form(ng-submit="submit()", name="register", novalidate="")
	div.form-group
		div.row
			div.col-xs-3
				input.form-control(id="name", name="name", ng-model="name", type="text", placeholder="Name", autofocus="")
		
		div.row
			div.col-xs-3
				input.form-control(id="email", name="email", ng-model="email", type="email",placeholder="Email", required="")
				p.help-block(ng-show="register.email.$dirty && register.email.$invalid") Please enter proper email
		div.row
			div.col-xs-3
				input.form-control(id="password", name="password", ng-model="password", type="password", placeholder="Password")
		div.row
			div.col-xs-3
				input.form-control(id="password_confirm", name="password_confirm", ng-model="password_confirm", type="password", placeholder="Confirm Password", validate-equals="password")
				p.help-block(ng-show="register.password_confirm.$dirty && register.password_confirm.$invalid") Please match passwords
		div.row
			div.col-xs-3
				button.btn.btn-primary(type="Submit", ng-disabled="register.$invalid") Register

		div.row.alert.animated(ng-if="register", class="alert-{{alert-type}}", ng-class="{'flipInY': alert.show, 'flipOutY': !alert.show, 'alert-hidden': !alert.hasBeenShown}")
			strong{{alert.title}}
			{{alert.message}}
				


